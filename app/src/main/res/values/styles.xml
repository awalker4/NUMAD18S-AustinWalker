<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ScroggleTile">
        <item name="android:layout_height">@dimen/scroggle_tile_size</item>
        <item name="android:layout_width">@dimen/scroggle_tile_size</item>
        <item name="android:layout_margin">@dimen/scroggle_tile_margin</item>
        <item name="android:padding">@dimen/scroggle_tile_padding</item>
        <item name="android:background">@drawable/scroggle_tile</item>
        <item name="android:src">@drawable/scroggle_tile</item>
    </style>


    <style name="LevelButton">
        <item name="android:layout_height">@dimen/level_select_button_size</item>
        <item name="android:layout_width">@dimen/level_select_button_size</item>
        <item name="android:layout_margin">@dimen/level_select_button_margin</item>
        <item name="android:padding">@dimen/scroggle_tile_padding</item>
        <item name="android:background">@drawable/select_level_button</item>
    </style>

</resources>
